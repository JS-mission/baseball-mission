{
  "env": {
    "browser": true,
    "node": true,
    "es2021": true,
  },
  "extends": ["airbnb-base", "plugin:prettier/recommended"],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": [
      "error",
      {
        "semi": true,
        "singleQuote": true,
        "tabWidth": 2,
        "printWidth": 80,
        "trailingComma": "all",
        "arrowParens": "always",
      },
    ],
    "no-console": "off",
    "no-unused-vars": ["warn"],
  },
}
